<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_invoice"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/popup_invoice_spn_parent_list"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/popup_invoice_spn_child_list"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/popup_invoice_btn_select_customer_invoice"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/popup_invoice_btn_select_customer_invoice" />

</LinearLayout>